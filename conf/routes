
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /api/test                   controllers.UserController.test

# todo change to post
# User
POST    /api/user/login             controllers.UserController.login
POST    /api/user/register          controllers.UserController.register
POST    /api/user/promote           controllers.UserController.promote(id: Int)
GET     /api/user/:id               controllers.UserController.get(id: Int)

# Category
POST    /api/category/create        controllers.CategoryController.create(name: String, isFinal: Boolean)
GET     /api/category/:id           controllers.CategoryController.get(id: Int)

# Appointment
POST    /api/appointment/create     controllers.AppointmentController.create(hostId: Int, visitorId: Int)
GET     /api/appointment/:id        controllers.AppointmentController.get(id: Long)

# Schedule
POST    /api/schedule/createDefault controllers.ScheduleController.createDefault
POST    /api/schedule/createCustom  controllers.ScheduleController.createCustom