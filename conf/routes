# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
GET     /api/test                       controllers.UserController.test

# User
POST    /api/user/login                 controllers.UserController.login
POST    /api/user/register              controllers.UserController.register
POST    /api/user/promote               controllers.UserController.promote(id: Int)
GET     /api/user/hosts                 controllers.UserController.getHosts
GET     /api/user/:id                   controllers.UserController.get(id: Int)

# Appointment
POST    /api/appointment/create         controllers.AppointmentController.create
GET     /api/appointment/list           controllers.AppointmentController.byDate(hostId: Int, date: org.joda.time.LocalDate)
GET     /api/appointment/:id            controllers.AppointmentController.get(id: Long)

# Schedule
POST    /api/schedule/default/create    controllers.ScheduleController.createDefault
POST    /api/schedule/custom/create     controllers.ScheduleController.createCustom
GET     /api/schedule/host/:hostId      controllers.ScheduleController.getSchedules(hostId: Int)