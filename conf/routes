
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /api/test                           controllers.UserController.test

# todo change to post
# User
POST    /api/user/login                     controllers.UserController.login
POST    /api/user/register                  controllers.UserController.register
GET     /api/user/:userId                   controllers.UserController.get(userId: Int)

# Category
POST    /api/category/create                controllers.CategoryController.create(name: String, isFinal: Boolean)
GET     /api/category/:categoryId           controllers.CategoryController.get(categoryId: Int)

# Appointment
POST    /api/appointment/create             controllers.AppointmentController.create(hostId: Int, visitorId: Int)
GET     /api/appointment/:appointmentId     controllers.AppointmentController.get(appointmentId: Long)